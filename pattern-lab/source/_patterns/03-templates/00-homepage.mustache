<div class="content-wrapper">
    <section id="sidebar" class="sidebar js-hide">{{> molecules-sidebar-list }}</section>
    <section id="content" class="main-content">
        <div id="overlay"></div>
        <header>
            <button tabindex='1' id="openMainMenu" class="mobile-menu"><span id="sr-menu" class="sr-only">Menu</span><span id="bars" class="material-icons" aria-hidden="true" title="Menu">menu</span></button>
            {{> molecules-header }}
        </header>
        <section id="calculateOffset" class="card-container">
            {{> organisms-main-cards }}
        </section>
        <footer>
            <div class="footer-content text-align-center">
                <p>Questions or feedback?  We are happy to help!</p>
                <a class="contact" href="mailto:pearson-design-accelerator@pearson.com">pearson-design-accelerator@pearson.com</a>
                <ul class="pe-list pe-list--unstyled">
                    {{# footerLinks }}
                        <li><a href="{{ url }}">{{ label }}</a></li>
                    {{/ footerLinks }}
                </ul>
            </div>
        </footer>
    </section>
</div>
